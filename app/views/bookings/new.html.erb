<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <%= simple_form_for([@listing, @booking]) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class=“form-inputs”>
            <%= f.input :date_time, html5: true, label: "Please choose a date and time" %>
          </div>

          <%# <div class=“form-inputs”>
            <%= f.input :status %>
          <%# </div> %>

          <div class=“form-actions”>
            <%= f.submit "Request Momma!" %>
          </div>

        <% end %>

        <br>

        <%= simple_form_for ([@listing, @booking]), data: { controller: 'flatpickr' } do |f| %>
          <%= f.input :date_time, as: :string, input_html: { data: { flatpickr_target: "dateTime" } }, label: "Please choose a date" %>
          <%= f.input :date_time, as: :string, input_html: { data: { flatpickr_target: "dateTime" } }, label: "Please choose a time" %>
          <%= f.submit 'Request Momma!' %>
        <% end %>

      </div>
    </div>
  </div>
</div>

