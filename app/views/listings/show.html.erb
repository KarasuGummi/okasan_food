  <%# food-card %>
  <div class="show-food-card">
      <% if @listing.photo.attached? %>
      <%= cl_image_tag @listing.photo.key%>
    <div class="show-food-info">
      <h2><%= @listing.name %></h2>
      <p>Â¥<%= @listing.price %></p>
      <p><%= @listing.description %></p>
      <% end %>
      <div class="request-pink-button">
        <button class="pink-button">
        <%= link_to "Request", new_listing_booking_path(@listing) %>
        </button>
      </div>
    </div>
  </div>


   <!-- user review -->
    <div class="show-user-review">
      <h2>Reviews</h2>
      <% if @listing.reviews.any? %>
        <% @listing.reviews.each do |review| %>
          <div class="review">
            <p><strong><%= review.user.first_name %> <%= review.user.last_name %></strong></p>
            <p><%= review.content %></p>
            <div id="stars">
              <% review.rating.times do %>
                <span class="star" data-star="1"><i class="fa-solid fa-star"></i></span>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>No reviews yet.</p>
      <% end %>

<!-- Review Form -->
      <h2>Add a Review</h2>
      <%# <%= simple_form_for [@listing, Review.new] do |f| %>
    <%= simple_form_for [@listing, Review.new] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: { data: { controller: "star-rating", action: "click->form-submit#submit" } } %>
  <%= f.submit class: "d-none" %>
<% end %>
    </div>
</div>
