<div class="navbar navbar-expand-sm navbar-light navbar-okasanfood">
  <div class="container">
    <%= link_to "Okasan Food", root_path, class: "navbar-title"%>

    <nav class="navbar-search">
      <div class="container-fluid">
            <%= form_with url: listings_path, method: :get, class: "d-flex" do %>
              <%= text_field_tag :query,
                    params[:query],
                    class: "form-control me-2",
                    placeholder: "Search for food"
                %>
              <%= submit_tag "Search", name: "", class: "btn btn-warning", type: "submit" %>
            <% end %>
      </div>
    </nav>
    <% if current_user %>
      <% if current_user.momma? %>
        <div class="d-flex gap-2">
          <span> <%= link_to "Your dishes", momma_listings_path, class: "badge text-bg-secondary" %> </span>
          <span> <%= link_to "Your bookings", momma_bookings_path, class: "badge text-bg-danger"%> </span>
          <span> <%= link_to "Share your dish", new_listing_path, class: "badge text-bg-warning" %> </span>
          <span> <%= link_to "Sign out",  destroy_user_session_path , data: { "turbo-method": :delete }, class: "badge text-bg-dark" %> </span>
        </div>
      <%# after sign in / other menu items for user %>
      <% else %>
        <div class="d-flex gap-2">
          <span> <%= link_to "My Requests",  bookings_path, class: "badge text-bg-warning" %> </span>
          <span> <%= link_to "Sign out",  destroy_user_session_path , data: { "turbo-method": :delete }, class: "badge text-bg-dark" %> </span>
        </div>
      <% end %>
      <%# before sign in %>
    <% else %>
      <div class="d-flex gap-3">
        <span> <%= link_to "Momma's Site", new_user_session_path, class: "badge text-bg-warning" %> </span>
        <span> <%= link_to "Your page", new_user_session_path, class: "badge text-bg-danger" %> </span>
        <%# link_to "Sign up", new_user_registration_path %>
      </div>
    <% end %>
  </div>
</div>
