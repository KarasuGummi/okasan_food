<div class="navbar navbar-expand-sm navbar-light navbar-okasanfood">
  <div class="container">
    <%= link_to "Okasan Food", root_path, class: "navbar-title"%>

    <nav class="navbar-search">
      <div class="container-fluid">
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search for food" aria-label="Search">
          <button class="btn-search" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <% if current_user %>
      <div class="dropdown">
        <button class="btn-login" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
         <%= image_tag 'user_icon.jpg' %>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
          <li><button class="dropdown-item" type="button"><%= link_to "Sign out",  destroy_user_session_path , data: { "turbo-method": :delete } %></button></li>
          <%# <li><button class="dropdown-item" type="button"><%= link_to "Sign up", new_user_registration_path %></button></li>
          <li><button class="dropdown-item" type="button"><%= link_to "Share your dish", new_listing_path %></button></li>
        </ul>
      </div>
    <% else %>
      <div class="d-flex gap-2" >
        <button class="btn-login" type="button">
          <%= link_to "Sign in", new_user_session_path %>
        </button>
        <button class="btn-login" type="button">
          <%= link_to "Sign up", new_user_registration_path %>
        </button>
      </div>
    <% end %>
  </div>
</div>
