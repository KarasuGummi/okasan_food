<div class="container">
  <h3 class="my-3">My Bookings</h3>
    <% if @bookings.any? %>
      <% @bookings.each do |booking| %>
        <div class="card-product">
          <% if booking.listing.photo.attached? %>
              <%= image_tag booking.listing.photo %>
          <% end %>
          <div class="card-product-infos">
            <h1><%= booking.listing.name %></h1>
            <h2><%= booking.listing.price %>JPY</h2>
            <p>Status: <%= booking.status %></p>
            <p><%= booking.date_time %></p>
            <%= form_with(model: booking, url: momma_booking_path(booking)) do |form| %>
              <%= form.label :status, style: "display: block" %>
              <%= form.select :status, Booking.statuses.keys %>
              <%= form.submit %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>You don't have any bookings.</p>
    <% end %>
</div>
