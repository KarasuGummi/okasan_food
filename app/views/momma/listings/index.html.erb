<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <h1 class="text-center">My Goodies</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% if @listings.any? %>
        <% @listings.each do |listing| %>
          <% if listing.photo.attached? %>
            <div class="col">
              <div class="card shadow-sm">
                <%= image_tag listing.photo, class: "bd-placeholder-img card-img-top", alt: "Thumbnail", style: "width: 100%; height: 225px;" %>
                <div class="card-body">
                  <p class="card-text"> <%= listing.name %> </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                    </div>
                    <small class="text-body-secondary"> <%= listing.price %>JPY</small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <p>You don't have any listings.</p>
      <% end %>
    </div>
  </div>
</div>
